@model Event_Manager.Models.Event
@{
    ViewData["Title"] = "Update an Event:";
}
@inject UserManager<ApplicationUser> UserManager
<h3>Update Event:</h3>
<form asp-action="Update" method="post">
    <input type="hidden" asp-for="EventID" value="@Model.EventID" />
    <div>
        <div>Event Name<p><input type="text" name="Name" class="btn-lg" asp-for="Name" value="@Model.Name"></p></div>
        <span asp-validation-for="Name"></span>
        <input type="hidden" asp-for="EventName" value=@UserManager.GetUserName(User)>
        <div>Date and Time<p><input type="date" name="Date" class="btn-lg" asp-for="date" value="@Model.date"></p></div>
        <span asp-validation-for="date"></span>
        <div>Location <p><input type="text" name="Location" class="btn-lg" asp-for="location" value="@Model.location"></p></div>
        <span asp-validation-for="location"></span>
        <div>Genre <p><input type="text" asp-for="genre" value="@Model.genre" /></p></div>
        <span asp-validation-for="genre"></span>
    </div>

    <button>Update event</button>


</form>

<form asp-controller="Home" asp-action="Index" method="get">
    <button>Go back</button>
</form>